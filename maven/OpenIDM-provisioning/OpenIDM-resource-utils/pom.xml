<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.forgerock.openidm.provisioning</groupId>
        <artifactId>OpenIDM-provisioning</artifactId>
        <version>1.7-SNAPSHOT</version>
    </parent>
    <groupId>com.forgerock.openidm.provisioning</groupId>
    <artifactId>OpenIDM-resource-utils</artifactId>
    <version>1.7-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>OpenIDM Provisioning Resource Utils</name>
    <description>OpenIDM is an open standards based Identity Management, Provisioning and Compliance solution. Experience shows that the most important features of an identity management product are: high flexibility in Business Process handling and compliance with open standards and interfaces. A highly flexible user interface combined with a very robust workflow engine make OpenIDM ready for any Identity Management project.</description>
    <url>http://www.forgerock.com/openidm.html</url>
    <organization>
        <name>ForgeRock</name>
        <url>http://www.forgerock.com</url>
    </organization>
    <dependencies>
        <dependency>
            <groupId>com.forgerock.openidm</groupId>
            <artifactId>OpenIDM-api</artifactId>
            <version>${openidm.currentVersion}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.forgerock.openidm</groupId>
            <artifactId>OpenIDM-annotations</artifactId>
            <version>1.7-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.forgerock.openidm</groupId>
            <artifactId>OpenIDM-commons</artifactId>
            <version>${openidm.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.forgerock.openidm.xml</groupId>
            <artifactId>OpenIDM-schemas</artifactId>
            <version>${openidm.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>net.sf.scannotation</groupId>
            <artifactId>scannotation</artifactId>
            <version>1.0.2</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xsom</groupId>
            <artifactId>xsom</artifactId>
            <version>20100725</version>
        </dependency>
         <dependency>
            <groupId>com.forgerock.openidm.test</groupId>
            <artifactId>OpenIDM-test-tools</artifactId>
            <version>1.7-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
         <!--Provided dependencies-->
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>test-resource-initialize</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>OpenIDM-test-tools</includeArtifactIds>
                            <includes>test-data/**</includes>
                            <outputDirectory>${basedir}/target</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
