<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.forgerock.openidm.provisioning</groupId>
        <artifactId>OpenIDM-provisioning</artifactId>
        <version>1.7-SNAPSHOT</version>
    </parent>
    <groupId>com.forgerock.openidm.provisioning</groupId>
    <artifactId>OpenIDM-identityconnector-integration</artifactId>
    <version>1.7-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>OpenIDM Identity Connector Framework Integration</name>
    <description>OpenIDM is an open standards based Identity Management, Provisioning and Compliance solution. Experience shows that the most important features of an identity management product are: high flexibility in Business Process handling and compliance with open standards and interfaces. A highly flexible user interface combined with a very robust workflow engine make OpenIDM ready for any Identity Management project.</description>
    <url>http://www.forgerock.com/openidm.html</url>
    <organization>
        <name>ForgeRock</name>
        <url>http://www.forgerock.com</url>
    </organization>
    <dependencies>
        <dependency>
            <groupId>com.forgerock.openidm</groupId>
            <artifactId>OpenIDM-commons</artifactId>
            <version>${openidm.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.forgerock.openidm</groupId>
            <artifactId>OpenIDM-annotations</artifactId>
            <version>${openidm.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.forgerock.openidm.xml</groupId>
            <artifactId>OpenIDM-schemas</artifactId>
            <version>${openidm.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.forgerock.openidm.provisioning</groupId>
            <artifactId>OpenIDM-resource-utils</artifactId>
            <version>${openidm.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>org.identityconnectors</groupId>
            <artifactId>connector-framework</artifactId>
        </dependency>
        <dependency>
            <groupId>org.identityconnectors</groupId>
            <artifactId>connector-framework-internal</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <scope>provided</scope>
        </dependency>
        
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>1.7.6</version>
        </dependency>


        <!-- Test dependencies -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.forgerock.openidm.test</groupId>
            <artifactId>OpenIDM-test-tools</artifactId>
            <version>1.7-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.derby</groupId>
            <artifactId>derby</artifactId>
            <version>10.6.1.0</version>
            <scope>test</scope>
            <type>jar</type>
        </dependency>
    </dependencies>

    <!-- Build settings -->
    <build>
	<!-- Plugin settings -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-initialize</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.forgerock.openidm.xml</groupId>
                                    <artifactId>OpenIDM-schemas</artifactId>
                                    <version>1.7-SNAPSHOT</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/schema_copy</outputDirectory>
                                    <includes>**/catalog.xml,**/*.xsd</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-resource-initialize</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>OpenIDM-test-tools</includeArtifactIds>
                            <includes>test-data/**</includes>
                            <outputDirectory>${basedir}/target</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-icf-bundles</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.flatfile</artifactId>
                                    <version>1.0.2838</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.databasetable</artifactId>
                                    <version>1.1.4958</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.db2</artifactId>
                                    <version>1.0.4828</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.ldap</artifactId>
                                    <version>1.0.5531</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.ldap</artifactId>
                                    <version>1.0.5754openidm</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.mysqluser</artifactId>
                                    <version>1.1.4900</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.spml</artifactId>
                                    <version>1.0.4828</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.flat</artifactId>
                                    <version>1.1.1503</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <!--artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.domino</artifactId>
                                    <version>1.0.11</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.oracle</artifactId>
                                    <version>1.0.5011</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.oracleerp</artifactId>
                                    <version>1.0.5400</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.rsaauthmgr</artifactId>
                                    <version>1.0.5675</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.identityconnectors</groupId>
                                    <artifactId>org.identityconnectors.sap</artifactId>
                                    <version>1.0.5529</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/META-INF/bundles</outputDirectory>
                                </artifactItem>
                                -->
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <extension>true</extension>
                    <verbose>true</verbose>
                    <debug>true</debug>
                    <schemaDirectory>${project.build.directory}/schema_copy/META-INF/wsdl/xml/ns/public</schemaDirectory>
                    <schemaLanguage>XMLSCHEMA</schemaLanguage>
                    <!--generatePackage>com.forgerock.openidm.xml.ns.common</generatePackage-->
                    <schemaIncludes>
                        <include>**/idconnector/configuration-1.xsd</include>
                        <!--include>**/common-1.xsd</include-->
                    </schemaIncludes>
                    <schemaExcludes>
                        <exclude>**/test*.xsd</exclude>
                    </schemaExcludes>
                    <catalog>${project.build.directory}/schema_copy/META-INF/catalog.cat</catalog>
                    <plugins>
                    </plugins>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
