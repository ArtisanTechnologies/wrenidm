                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.forgerock.openidm.xml</groupId>
                                    <artifactId>OpenIDM-schemas</artifactId>
                                    <classifier>repositoryws</classifier>
                                    <version>1.7-SNAPSHOT</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
