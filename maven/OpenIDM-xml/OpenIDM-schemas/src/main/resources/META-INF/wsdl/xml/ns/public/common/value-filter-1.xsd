<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://openidm.forgerock.com/xml/ns/public/common/value-filter-1.xsd"
    xmlns:tns="http://openidm.forgerock.com/xml/ns/public/common/value-filter-1.xsd"
    elementFormDefault="qualified">

    <xsd:annotation>
        <xsd:documentation>
            Schema that describes value filters.

            TODO
        </xsd:documentation>
    </xsd:annotation>

    <xsd:element name="patternFilter">
        <xsd:annotation>
            <xsd:documentation>
                Value filter that works with patterns, replacing pattern matches
                with static values
            </xsd:documentation>
        </xsd:annotation>
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="tns:replace" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="replace">
        <xsd:annotation>
            <xsd:documentation>
                Definition of a pattern replacement.
            </xsd:documentation>
        </xsd:annotation>
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="pattern" type="xsd:string">
                    <xsd:annotation>
                        <xsd:documentation>
                            PCRE pattern to match (using Java flavor of PCRE)
                            Every occurence of this pattern will be replaced.
                        </xsd:documentation>
                    </xsd:annotation>
                </xsd:element>
                <xsd:element name="replacement" type="xsd:string">
                    <xsd:annotation>
                        <xsd:documentation>
                            Pattern occurences will be replaced with the value
                            of this element.
                        </xsd:documentation>
                    </xsd:annotation>
                </xsd:element>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    
</xsd:schema>