<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
                  version="2.0">
    <namespace>http://openidm.forgerock.com/xml/ns/custom-taglib/</namespace>
    <tag>
        <tag-name>schemaFormGrid</tag-name>
        <component>
            <component-type>SchemaFormGrid</component-type>
            <handler-class>com.forgerock.openidm.web.component.formgenerator.SchemaFormGridTag</handler-class>
        </component>
        <attribute>
            <name>bean</name>
            <required>true</required>
        </attribute>
        <attribute>
            <name>value</name>
            <required>false</required>
        </attribute>
        <attribute>
            <name>editable</name>
            <required>false</required>
        </attribute>
    </tag>
    <tag>
        <tag-name>button</tag-name>
        <component>
            <component-type>com.forgerock.openidm.web.component.button.HtmlButton</component-type>
            <renderer-type>HtmlButtonRenderer</renderer-type>
        </component>
    </tag>
    <tag>
        <tag-name>inputSyntaxTextArea</tag-name>
        <component>
            <component-type>javax.faces.HtmlInputTextarea</component-type>
            <renderer-type>InputSyntaxTextAreaRenderer</renderer-type>
        </component>
    </tag>
    <tag>
        <tag-name>schemaMessage</tag-name>
        <component>
            <component-type>javax.faces.HtmlMessage</component-type>
            <renderer-type>schemaMessageRenderer</renderer-type>
        </component>
    </tag>
</facelet-taglib>
